.layer-box
    .detail-box.row
        .detail-img
            img(src=`/uploads/img/${detail[0].name}`)
        .detail-info   
            .row
                .col-8
                    .detail-user-profile
                .col-4
                    .layer-option
                        i(class='mdi mdi-dots-vertical' id='detail-option')
                        i(class='mdi mdi-close' id='close')
                        .layer-option-box
                                .option-box-row#image-delete
                                    i(class='mdi mdi-delete')
                                    span 삭제
                                .option-box-row
                                    i(class='mdi mdi-pencil')
                                    span 수정
            .row
                .col-12
                    h2.detail-title TITLE
            .row
                .col-12
                    .detail-description description
            .row   
                .col-12
                    .row
                        .col-12
                            .respect-each
                                .respect
                                    i(class='mdi mdi-emoticon-lol-outline')
                                    span 354
                            .comment-each
                                .comment
                                    i(class='mdi mdi-comment-outline')
                                    span 17

script.
    $(document).ready(function(){
        $('#close').on('click',function(){
            $("#layer").fadeOut().html('');
        })
        $('#detail-option').on('click',function(){
            $('.layer-option-box').toggle(function(){
            })
        })


        $('#image-delete').on('click',function(){
            var detailId = #{detail[0].id}
            var detailName = '#{detail[0].name}'
            $.ajax({
                url : '/works/' + detailId + '?_method=delete',
                type : "POST",
                data : { 'fileName' : detailName },
                success: function(data){
                    $("#layer").fadeOut().html('');
                    location.reload();
                }
            })
        })
    })